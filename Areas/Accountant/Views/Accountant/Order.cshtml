    <section class="section">
        <div class="row" id="table-hover-row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Management Order</h4>
                    </div>
                    <div class="card-content">
                        <div class="card-body" style="padding: 0.4rem 1.7rem;">
                            <div class="row">
                                <div class="col-md-3 mb-4">
                                    <div class="input-group mb-3">
                                        <label class="input-group-text" for="inputGroupSelect01">Month</label>
                                        <select class="form-select" id="selectMonth" name="selectMonth">
                                            <option selected="" value="all">Choose...</option>
                                            <option value="1">January</option>
                                            <option value="2">February</option>
                                            <option value="3">March</option>
                                            <option value="4">April</option>
                                            <option value="5">May</option>
                                            <option value="6">June</option>
                                            <option value="7">July</option>
                                            <option value="8">August</option>
                                            <option value="9">September</option>
                                            <option value="10">October</option>
                                            <option value="11">November</option>
                                            <option value="12">December</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- table hover -->
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead>
                                    <tr>
                                        <th>NO.</th>
                                        <th>CUSTOMER NAME</th>
                                        <th>SERVICE NAME</th>
                                        <th>PRICE</th>
                                        <th>USAGE PACK</th>
                                        <th>TOTAL</th>
                                        <th>EMPLOYEE NAME</th>
                                        <th>CONNECTION DATE</th>
                                        <th>EXPIRATION DATE</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @*                                    @for (int i = 0; i < Model.Count; i++)
                                    {
                                    <tr id="trTable">
                                    <td>@i</td>
                                    <td class="text-bold-500">@Model[i].CustomerName</td>
                                    <td>@Model[i].ServiceName</td>
                                    <td class="text-bold-500">@Model[i].Price$/month</td>
                                    <td>@Model[i].UsagePack</td>
                                    <td>@Model[i].Total$</td>
                                    @if (Model[i].EmployeeID == null)
                                    {
                                    <td>Order online</td>
                                    }
                                    else
                                    {
                                    <td>@Model[i].EmployeeName</td>
                                    }
                                    <td>@Model[i].ConnectionDate</td>
                                    <td>@Model[i].ExpirationDate</td>
                                    </tr>
                                    }*@
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
